{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true,
  },
  "include": [ "node_modules/@angular/cdk/**/typings/index.d.ts", "src/**/*.ts" ],
  "exclude": [ "**/*.spec.ts" ]
}
